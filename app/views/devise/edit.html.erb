
<div class="col-lg-4 col-lg-offset-4">  
<div class=" panel panel-primary">
<div class="panel-heading">Edit form</div>
<div class="panel-body">

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ffield">
    <%= f.text_field :firstname, autofocus: true,:class=>"myform-control" %>
  </div>

  <div class="lfield">
    <%= f.text_field :lastname, autofocus: true,:class=>"myform-control" %>
  </div>

  <% if current_user.role.name!="admin"%>
  <div class="field">
   <%= f.collection_select :role_id,Role.where.not(name:"admin"),:id,:name,{:prompt=>"what type of user are you?"},:class=>"myform-control"%>
  </div>
  <%end%>


  <div class="field">
    <%= f.text_field :phone, autofocus: true,:class=>"myform-control" %>
  </div>

  <%if f.object.role.name.eql?("admin")%>
  <div class="field">
    <%= f.email_field :email, autofocus: true,:class=>"myform-control" %>
  </div>
  <%end%>

 

  <div class="field">
    <%= f.password_field :password,:class=>"myform-control" %>
  </div>
 <br>

  <div class="field">
    <%= f.submit "Update",:class=>"btn-block myform-btn" %>
  </div>
  
<% end %>



<%= link_to "Back", :back %>

</form>
</div>
</div>
</div>