
<div class="hstyle">Users</div>
<table id="users" border=2 class="table table-striped table-bordered">
  <thead>
    <th>user_id</th>
    <th>Name</th>
    <th>phone</th>
    <th>email</th>
    <th>role</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
      <td><%=u.id%></td>
      <td><%=u.firstname%>&nbsp<%=u.lastname%></td>
      <td><%=u.phone%></td>
      <td><%=u.email%></td>
      <td><%=u.role.name%></td>
      <td>

      <% if can? :show, u%>
            <%= link_to "view",u%>  &nbsp 
      <% end %>
      <% if can? :edit, u%>
              <%= link_to "edit", edit_user_path(u) %>&nbsp 
      <% end %>
      <% if can? :destroy, u%>
             <%= link_to 'delete',u,method: :delete,data:{confirm:'Do u want to delete record?'}%>
      <% end %> 

      </td>
      </tr>
    <%end%>
  </tbody>
</table>

<script>
  $(document).ready(function(){
     $("#users").dataTable()
  });
</script>
