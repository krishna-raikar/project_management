
<h2>#Users</h2>
<table id="users" border=2 class="ui celled table">
	<thead>
		<th>user_id</th>
		<th>Name</th>
		<th>phone</th>
		<th>email</th>
		<th>designation</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @users.each do |u| %>
			<tr>
			<td><%=u.id%></td>
			<td><%=u.firstname%><%=u.lastname%></td>
			<td><%=u.phone%></td>
			<td><%=u.email%></td>
			<td><%=u.designation%></td>
			<td><%= link_to "view",u%> | 
			<%= link_to "edit", edit_user_path(u) %> | 
			<%= link_to 'delete',u,method: :delete,data:{confirm:'Do u want to delete record?'}%></td>
			</tr>
		<%end%>
	</tbody>
</table>

<script>
	$(document).ready(function(){
		 $("#users").dataTable()
	});
</script>
