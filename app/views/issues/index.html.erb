<div class="hstyle">Issues</div>



<% if current_user.role.name!="admin"%>
<ul class="nav nav-pills"> 
    <li <%= request.fullpath == (project_issues_path+"?view_flag=true")? "class=active": ""%>>
    <%=link_to "submitted_by",project_issues_path+"?view_flag=true" %>
    </li>
    <li <%=(request.fullpath == project_issues_path+"?view_flag=false" || request.fullpath==project_issues_path)? "class=active": ""%>>
    <%=link_to "assigned to me",project_issues_path+"?view_flag=false" %>
    </li>            
 </ul>
 <%end%>


<table id="issues" border=2 class="table table-striped table-bordered">
	<thead>
		<th>issue_id</th>
		<th>category</th>
		<th>title</th>
		<th>description</th>
		<th>priority</th>
		<th>severity</th>
		<th>status</th>
		<th>entry_date</th>
		<th>creator_id</th>
		<th>assignee_id</th>
		<th>Actions</th>

	</thead>
	<tbody>
		<% @issues.each do |i| %>
			<tr>
			<td><%=i.id%></td>
			<td><%=i.issue_category%></td>
			<td><%=i.title%></td>
			<td><%=i.description%></td>
			<td><%=i.priority%></td>
			<td><%=i.severity%></td>
			<td><%=i.status%></td>
			<td><%=i.entry_date%></td>
			<td><%=i.creator_id%></td>
			<td><%=i.assignee_id%></td>
			<td>

			<% if can? :show, i%>
  					<%= link_to "view", [@cur_proj,i] %> &nbsp 
			<% end %>
			<% if can? :edit, i%>
  				    <%= link_to "edit", edit_project_issue_path(@cur_proj,i) %>&nbsp 
			<% end %>
			<% if can? :destroy, i%>
  					 <%=link_to 'delete', [@cur_proj,i], method: :delete, data: { confirm: 'record will be deleted.Are you sure?' }%>
			<% end %>
			</td>
			</tr>
		<%end%>
	</tbody>
</table>


<% if can? :create, Issue.new%>
<%= link_to "new_issue", new_project_issue_path %>
<%end%>


<script>
	$(document).ready(function(){
		 $("#issues").dataTable()
        // @issues=nil;
		 
	});
</script>