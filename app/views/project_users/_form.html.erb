
<%=form_for [@cur_proj,@project_user] do |f|%>

<%if @project_user.id?%>
	<%= f.collection_select(:user_id, User.where(role_id:2), :id, :firstname, {:prompt => "choose employees"}, {:class=>"form-control"}) %>
<%else%>
	<%= f.collection_select(:user_id, User.where(role_id:2), :id, :firstname, {:prompt => "choose employees"}, {:multiple => true,:class=>"form-control"}) %>
<%end%>

<%=f.submit :class=>"btn btn-primary" %>
<%end%>


