
<h2>#Projects</h2>
<table id="projects" border=2 class="ui celled table">
	<thead>
		<th>project_id</th>
		<th>name</th>
		<th>startdate</th>
		<th>enddate</th>
		<th>status</th>
		<th></th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
		<% @projects.each do |p| %>
			<tr>
			<td><%=p.id%></td>
			<td><%=p.pname%></td>
			<td><%=p.startdate%></td>
			<td><%=p.enddate%></td>
			<td><%=p.status%></td>

			<% if can? :view, p%>
  					<td><%= link_to "view", p %></td>
			<% end %>
			<% if can? :edit, p%>
  					<td><%= link_to "edit", edit_project_path(p) %></td>
			<% end %>
			<% if can? :delete, p%>
  					<td><%=link_to 'delete', p, method: :delete, data: { confirm: 'record will be deleted.Are you sure?' }%></td>
			<% end %>	
			</tr>
		<%end%>
	</tbody>
</table>


<%= link_to "new_Project", new_project_path %>


<script>
	$(document).ready(function(){
		 $("#projects").dataTable()
	});
</script>