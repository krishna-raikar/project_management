
<div class="hstyle">Projects Details</div>
<div class="row">
<div class="col-lg-12">
	
	<table id="proj_det_tb" class="table">
	<tr>
		<td>name</td>	
		<td>start_date</td>
		<td>end_date</td>
		<td>due_date</td>
		<td>status</td>
		<td>description</td>
	</tr>
	<tr>
	<td><%=@project.pname%></td>
	
	<td> <%=@project.startdate%></td>
	
	<td> <%=@project.enddate%></td>
	
	<td> <%=@project.duedate%></td>	
	
	<td> <%=@project.status%></td>

	
	<td> <%=@project.description%></td>
	</tr>
	</table>
</div>
</div>
<br>



<ul class = "pager">
   <li class = "previous"><a href = <%=projects_path%>>&larr; back</a></li>
</ul>

<%  
  if controller.controller_name.eql?("projects")
     @proj = Project.find_by(id:params[:id])
  else
     @proj = Project.find_by(id:params[:project_id])
  end    
%>
<br><br>


<%= link_to "PROJECT TASKS", project_tasks_path(@proj),:class=>"btn btn-default btn-success" %>

<%= link_to "PROJECT ISSUES", project_issues_path(@proj),:class=>"btn btn-default btn-success" %>

<%= link_to "PROJECT ATTACHMENTS", project_attachments_path(@proj),:class=>"btn btn-default btn-success" %>

<%= link_to "PROJECT USERS", project_project_users_path(@proj),:class=>"btn btn-default btn-success" %>

