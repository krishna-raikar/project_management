<div class="hstyle">Roles</div>

<table id="roles" border=2 class="ui celled table">
	<thead>
		<th>role_id</th>
		<th>name</th>
		<th>description</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @roles.each do |r| %>
			<tr>
			<td><%=r.id%></td>
			<td><%=r.name%></td>
			<td><%=r.description%></td>
			<td>

			<% if can? :show, p%>
  					<%= link_to "view", r %> &nbsp 
			<% end %>
			<% if can? :edit, p%>
  				    <%= link_to "edit", edit_role_path(r) %>&nbsp 
			<% end %>
			<% if can? :destroy, p%>
  					 <%=link_to 'delete', r, method: :delete, data: { confirm: 'record will be deleted.Are you sure?' }%>
			<% end %>
			</td>
			</tr>
		<%end%>
	</tbody>
</table>


<% if can? :create, Role.new%>
<%= link_to "new_role", new_role_path %>
<%end%>

<script>
	$(document).ready(function(){
		 $("#roles").dataTable()
	});
</script>
